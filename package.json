{
  "name": "lghs-sign-in",
  "private": true,
  "version": "1.0.0",
  "description": "",
  "main": "www/index.php",
  "scripts": {
    "scss": "node-sass --output-style compressed -o www/dist/css src/assets/scss",
    "svg": "svgo -f src/assets/svg -o www/dist/svg",
    "img": "imagemin src/assets/images www/dist/images -p",
    "fa:copy-fonts": "cp node_modules/font-awesome/fonts/fontawesome-webfont.* www/dist/fonts",
    "watch:css": "onchange 'src/assets/scss/**/*.scss' -- npm run scss",
    "watch": "parallelshell 'npm run build' 'npm run watch:css'",
    "build": "npm run scss && npm run svg && npm run img && npm run fa:copy-fonts",
    "postinstall": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LgHS/sign-in.git"
  },
  "author": "Jonathan Berger <jonathan@paperpixel.net>",
  "license": "GPL",
  "bugs": {
    "url": "https://github.com/LgHS/sign-in/issues"
  },
  "homepage": "https://github.com/LgHS/sign-in",
  "dependencies": {
    "bootstrap-sass": "^3.3.6"
  },
  "devDependencies": {
    "browser-sync": "^2.11.1",
    "font-awesome": "^4.5.0",
    "imagemin-cli": "^2.1.0",
    "node-sass": "^3.4.2",
    "onchange": "^2.0.0",
    "parallelshell": "^2.0.0",
    "svgo": "^0.6.1"
  }
}
